pkgname=gmpc-avahi
pkgver=0.19.0
pkgrel=1
pkgdesc="A plugin for mpc for discover mpd daemon within avahi enabled networks"
arch=(i686 x86_64)
url="http://gmpc.wikia.com/wiki/GMPC_PLUGIN_AVAHI"
license="GPL"
depends=('libmpd>=0.19.0' 'gtk2' 'avahi')
source=("http://download.sarine.nl/Programs/gmpc/${pkgver}/${pkgname}-${pkgver}.tar.gz")

conflicts=gmpc-avahi-svn

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install
}

md5sums=('cc22a3604fbb8371cc98a086cf6e68bb')
sha256sums=('6c39815ed1b74699173173d99d4fc19604f78e818d9f6e69f6ce2da6c55faaee')
