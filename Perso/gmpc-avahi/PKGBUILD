pkgname=gmpc-avahi
pkgver=0.18.0
pkgrel=1
pkgdesc="A plugin for mpc for discover mpd daemon within avahi enabled networks"
arch=(i686 x86_64)
url="http://gmpc.wikia.com/wiki/GMPC_PLUGIN_AVAHI"
license="GPL"
depends=('libmpd>=0.18.0' 'gtk2' 'avahi')
source=("http://download.sarine.nl/Programs/gmpc/${pkgver}/${pkgname}-${pkgver}.tar.gz")

conflicts=gmpc-avahi-svn

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install
}

md5sums=('001ee8ea58f0ea4188ab3f1159acaa0c')
sha256sums=('80b406d141252d90048fde55c2b06b5cbb263afe814447e5d08d2d9f4c413bdc')
