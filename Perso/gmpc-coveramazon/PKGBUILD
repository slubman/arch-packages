pkgname=gmpc-coveramazon
pkgver=0.16.0
pkgrel=1
pkgdesc="This plugin fetches cover art, and album information from amazon"
arch=(i686 x86_64)
url="http://gmpcwiki.sarine.nl/index.php?title=Plugins"
license="GPL"
depends=('libmpd>=0.16.0' 'libxml2' 'gtk2')
source=("http://download.sarine.nl/Programs/gmpc/${pkgver}/${pkgname}-${pkgver}.tar.gz")

conflicts=gmpc-coveramazon-svn

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install
}
md5sums=('e13c556793ef4559d8a3dc3072dabf56')
sha256sums=('12a910f081d80c67dc51affade79e878d7db8b87e332d31dbf354d853251065b')
