pkgname=gmpc-last-fm
pkgver=0.18.0
pkgrel=1
pkgdesc="The last.fm plugin can fetch artist images, from last.fm. This plugin doesn't scrobble your music, use a dedicated client like mpdscribble for this."
arch=(i686 x86_64)
url="http://gmpc.wikia.com/wiki/GMPC_PLUGIN_LASTFM"
license="GPL"
depends=('libmpd>=0.18.0' 'gtk2')
source=("http://download.sarine.nl/Programs/gmpc/${pkgver}/${pkgname}-${pkgver}.tar.gz")

provide=(gmpc-lastfm)
replace=(gmpc-lastfm)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install
}

md5sums=('80229e4ff801f2fa001c056c4cf02738')
sha256sums=('e0a4c64087335d0107735e61ae3c6ee42e2aea33f1bc01f59de120d150d31b45')
