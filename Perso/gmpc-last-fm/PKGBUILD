pkgname=gmpc-last-fm
pkgver=0.19.0
pkgrel=1
pkgdesc="The last.fm plugin can fetch artist images, from last.fm. This plugin doesn't scrobble your music, use a dedicated client like mpdscribble for this."
arch=(i686 x86_64)
url="http://gmpc.wikia.com/wiki/GMPC_PLUGIN_LASTFM"
license="GPL"
depends=('libmpd>=0.19.0' 'gtk2')
source=("http://download.sarine.nl/Programs/gmpc/${pkgver}/${pkgname}-${pkgver}.tar.gz")

provide=(gmpc-lastfm)
replace=(gmpc-lastfm)

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install
}

md5sums=('51d7bf7397c15a3272271d8d4c493b09')
sha256sums=('15e824b9e7dbd58adeccf2e0249905d49c8a610358b3806573237139eb8cf9f6')
