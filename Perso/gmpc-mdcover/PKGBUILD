pkgname=gmpc-mdcover
pkgver=0.19.0
pkgrel=1
pkgdesc="A plugin for gmpc that obtains album covers from your music directory."
arch=(i686 x86_64)
url="http://gmpc.wikia.com/wiki/GMPC_PLUGIN_MDCOVER"
license="GPL"
depends=('libmpd>=0.19.0' 'gtk2')
source=("http://download.sarine.nl/Programs/gmpc/${pkgver}/${pkgname}-${pkgver}.tar.gz")

conflicts=gmpc-mdcover-svn

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install
}

md5sums=('ff145fe84e4d5711f53a1e0004ff679b')
sha256sums=('84cf89649b9e8689074cf7687f1907803804eddec579e10f4488670fd819837a')
