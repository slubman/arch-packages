pkgname=gmpc-mdcover
pkgver=0.16.0
pkgrel=1
pkgdesc="A plugin for gmpc that obtains album covers from your music directory."
arch=(i686 x86_64)
url="http://gmpcwiki.sarine.nl/index.php?title=Plugins"
license="GPL"
depends=(libmpd libxml2 gtk2)
source=("http://download.sarine.nl/Programs/gmpc/${pkgver}/${pkgname}-${pkgver}.tar.gz")

conflicts=gmpc-mdcover-svn

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install
}

md5sums=('838e78d6df59adb51cbfbabb5cd1bcf8')
sha256sums=('315277ee30bb970aeccea39288bc003fc0c35fcdb318782e51df9c4f689fa7b5')
