pkgname=gmpc-mdcover
pkgver=0.18.0
pkgrel=1
pkgdesc="A plugin for gmpc that obtains album covers from your music directory."
arch=(i686 x86_64)
url="http://gmpc.wikia.com/wiki/GMPC_PLUGIN_MDCOVER"
license="GPL"
depends=('libmpd>=0.18.0' 'gtk2')
source=("http://download.sarine.nl/Programs/gmpc/${pkgver}/${pkgname}-${pkgver}.tar.gz")

conflicts=gmpc-mdcover-svn

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install
}

md5sums=('ca6923f48bea01fcbc3ad9cbe73f84a0')
sha256sums=('2372a4f99fe848e88a898c8d69ffa94542382f8ddb9231173f51e9f4bcf04864')
