pkgname=gmpc-lyrics
pkgver=0.16.0
pkgrel=1
pkgdesc="This plugin fetches lyrics from the internet. It uses the following websites as sources: LyricWiki, LeosLyrics and Lyrics Tracker"
arch=(i686 x86_64)
url="http://gmpcwiki.sarine.nl/index.php?title=Plugins"
license="GPL"
depends=('libmpd>=0.16.0' 'gtk2' 'libxml2')
source=("http://download.sarine.nl/Programs/gmpc/${pkgver}/${pkgname}-${pkgver}.tar.gz")

conflicts=gmpc-lyrics-svn

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install
}

md5sums=('7bb9c502771cffc0171620f46942bba9')
sha256sums=('5ee568d13537718ff09e2367c44dd36628eb51f14c1090d69b33070a0ae6a24f')
