pkgname=gmpc-lyrics
pkgver=0.18.0
pkgrel=1
pkgdesc="This plugin fetches lyrics from the internet. It uses the following websites as sources: LyricWiki, LeosLyrics and Lyrics Tracker"
arch=(i686 x86_64)
url="http://gmpc.wikia.com/wiki/GMPC_PLUGIN_LYRICS"
license="GPL"
depends=('libmpd>=0.18.0' 'gtk2' 'curl')
source=("http://download.sarine.nl/Programs/gmpc/${pkgver}/${pkgname}-${pkgver}.tar.gz")

conflicts=gmpc-lyrics-svn

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install
}

md5sums=('621d2a5f0d3e8dd574569304a22608e7')
sha256sums=('aa5aba1be05457ae08bf03d5a57106505d6a2be71ae803b41ce770e5ec453976')
