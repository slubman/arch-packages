pkgname=gmpc-albumview
pkgver=0.19.0
pkgrel=1
pkgdesc="This plugin fetches cover art, and album information from amazon"
arch=(i686 x86_64)
url="http://gmpc.wikia.com/wiki/GMPC_PLUGIN_COVERAMAZON"
license="GPL"
depends=('libmpd>=0.19.0' 'gtk2')
source=("http://download.sarine.nl/Programs/gmpc/${pkgver}/${pkgname}-${pkgver}.tar.gz")

conflicts=gmpc-coveramazon-svn

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install
}

md5sums=('66f22d939856fe8f29b9d7c0e2828d4f')
sha256sums=('5e3e895e6e47a21c11eb007110fa1c94ea8c332a014b354362bcfbd383490694')
