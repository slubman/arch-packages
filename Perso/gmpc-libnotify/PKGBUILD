pkgname=gmpc-libnotify
pkgver=0.18.0
pkgrel=1
pkgdesc="A plugin for gmpc that displays notifications using libnotify"
arch=(i686 x86_64)
url="http://gmpc.wikia.com/wiki/GMPC_PLUGIN_LIBNOTIFY"
license="GPL"
depends=('libmpd>=0.18.0' 'libnotify')
source=("http://download.sarine.nl/Programs/gmpc/${pkgver}/${pkgname}-${pkgver}.tar.gz")

conflicts=gmpc-libnotify-svn

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="${pkgdir}" install
}

md5sums=('eb2e9b8e0ef027095ae378e882c5aef0')
sha256sums=('a4eee1b9c0cfdc2a3f33c68826aa97727689c4240b29b06fc45bce6ea7712cb9')
